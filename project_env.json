{
  "cli": "codex",
  "commands": {
    "install": "cd project/backend && pip install -e '.[dev]' -q && cd ../frontend && npm ci",
    "ci": "cd project/backend && python -m pytest tests/ -q",
    "lint_arch": "python scripts/lint_arch.py --changed-only",
    "logs": "bash scripts/app_logs.sh --tail 50",
    "health": "bash scripts/health_check.sh"
  },
  "test_stages": [
    "cd project/backend && python -m pytest tests/ -q",
    "cd project/frontend && npx vitest run"
  ],
  "test_fast_stages": [
    "cd project/backend && python -m pytest tests/ -q --lf --maxfail=5",
    "cd project/frontend && npx vitest run --bail 5"
  ],
  "test_timeout": 120,
  "test_timeout_fast": 60,
  "max_fix_iterations": 3,
  "baseline_on_session_start": true,
  "uat_enabled": false,
  "uat_max_attempts": 2,
  "assistant_dispatch_enabled": false
}
